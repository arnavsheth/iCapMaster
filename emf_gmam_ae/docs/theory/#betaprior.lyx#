\begin_body

\begin_layout Standard
Bernoulli normal:
\begin_inset Formula 
\begin{align*}
Var\left(\beta_{k}\right)= & \left(E\left[\beta_{k}^{2}|\gamma_{k}=1\right]-E\left[\beta_{k}|\gamma_{k}=1\right]^{2}\right)p\left(\gamma_{k}\right)\\
 & +\left(E\left[\beta_{k}^{2}|\gamma_{k}=0\right]-E\left[\beta_{k}|\gamma_{k}=0\right]^{2}\right)\left(1-p\left(\gamma_{k}\right)\right)\\
= & \frac{p\left(\gamma_{k}\right)}{a_{0}}+\frac{\left(1-p\left(\gamma_{k}\right)\right)v}{a_{0}}\\
a_{0k}= & \frac{p\left(\gamma_{k}\right)}{\sigma_{\beta k}^{2}}+\frac{\left(1-p\left(\gamma_{k}\right)\right)v}{\sigma_{\beta k}^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
More complex:
\begin_inset Formula 
\begin{align*}
Var\left(\beta_{k}\right)= & E\left[Var\left(\beta_{k}|\gamma_{k}\right)\right]+Var\left(E\left[\beta_{k}|\gamma_{k}\right]\right)\\
= & Var\left(\beta_{k}|\gamma_{k}=1\right)p_{k}^{\gamma}+Var\left(\beta_{k}|\gamma_{k}=0\right)\left(1-p_{k}^{\gamma}\right)+Var\left(E\left[\beta_{k}|\gamma_{k}\right]\right)\\
= & \frac{p_{k}^{\gamma}}{a_{0k}}+\frac{\left(1-p_{k}^{\gamma}\right)v}{a_{0k}}+p_{k}^{\gamma}\left(\beta_{0}+\beta_{0}^{\Delta}\right)^{2}+\left(1-p_{k}^{\gamma}\right)\left(\beta_{0}+v\beta_{0}^{\Delta}\right)^{2}-E\left[\beta_{k}\right]^{2}\\
= & \frac{p_{k}^{\gamma}}{a_{0k}}+\frac{\left(1-p_{k}^{\gamma}\right)v}{a_{0k}}+p_{k}^{\gamma}\left(\beta_{0}+\beta_{0}^{\Delta}\right)^{2}+\left(1-p_{k}^{\gamma}\right)\left(\beta_{0}+v\beta_{0}^{\Delta}\right)^{2}-\left(\beta_{0}+p_{k}^{\gamma}\beta_{0}^{\Delta}+v\beta_{0}^{\Delta}\left(1-p_{k}^{\gamma}\right)\right)^{2}
\end{align*}

\end_inset


\end_layout

\end_body
